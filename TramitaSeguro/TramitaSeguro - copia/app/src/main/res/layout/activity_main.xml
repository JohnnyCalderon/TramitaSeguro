<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1184FF"
    android:backgroundTint="#1184FF"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="30dp"></androidx.legacy.widget.Space>

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="270dp"
        android:gravity="center|top"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAMITA SEGURO"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="57dp" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp"></androidx.legacy.widget.Space>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="112dp"
            android:layout_height="74dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INICIE SECIÓN / REGISTRATE"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold" />
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp"></androidx.legacy.widget.Space>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableLeft="@drawable/ic_mensaje"
            android:inputType="textEmailAddress"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableLeft="@drawable/ic_contrasena"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Olvídaste tú contraseña"
            android:textSize="7sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_registar"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:backgroundTint="#000000"
                android:text="Registrate"
                android:textColor="#FFFFFF"
                android:textSize="6sp" />

            <androidx.legacy.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp"></androidx.legacy.widget.Space>

            <Button
                android:id="@+id/btn_inicioSecion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="#0042C5"
                android:text="INICIE SESIÓN"
                android:textColor="#FFFFFF"
                android:textSize="6sp" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>